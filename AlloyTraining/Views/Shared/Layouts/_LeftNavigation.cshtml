    Layout = "~/Views/Shared/Layouts/_Root.cshtml";
}
<div class="row">
    <div class="span4">
        @await Html.PartialAsync("_LeftNavigationMenu", Model)
        @RenderSection("_LeftNavigationMenu", required: false)
    </div>
    <div class="span8">
        @RenderBody()
    </div>
</div>